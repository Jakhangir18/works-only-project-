---
// SplineScene.astro - Embeds a Spline 3D scene via iframe
interface Props {
  embedUrl: string
  className?: string
}

const { embedUrl, className = '' } = Astro.props
---

<div class={`spline-scene ${className}`}>
  <iframe
    src={embedUrl}
    frameborder="0"
    width="100%"
    height="100%"
    allowfullscreen
    loading="lazy"
    title="Spline 3D Scene"
  ></iframe>
</div>

<style>
  .spline-scene {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .spline-scene iframe {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
  }
</style>
