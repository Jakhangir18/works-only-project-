---
const menuItems = [
  { label: 'WORK', href: '#work' },
  { label: 'SERVICES', href: '#services', hasDropdown: true },
  { label: 'INDUSTRIES', href: '#industries', hasDropdown: true },
  { label: 'ABOUT', href: '#about' },
  { label: 'CONTACT', href: '#contact' },
]
---

<nav class="navigation">
  <div class="navigation__container">
    <a href="/" class="navigation__logo">
      <span class="navigation__logo-icon">J.T</span>
    </a>

    <ul class="navigation__menu">
      {menuItems.map((item) => (
        <li class="navigation__item">
          <a href={item.href} class="navigation__link">
            {item.label}
            {item.hasDropdown && <span class="navigation__arrow">â–¼</span>}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<style lang="scss">
  @use '../styles/helpers/fonts' as *;
  @use '../styles/helpers/colors' as *;
  @use '../styles/helpers/responsive' as *;

  .navigation {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;

    background: #000000;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .navigation__container {
    display: flex;
    align-items: center;
    justify-content: space-between;

    max-width: 1600px;
    margin: 0 auto;
    padding: 2rem 2rem;

    @include mq(tablet) {
      padding: 2.5rem 4rem;
    }
  }

  .navigation__logo {
    position: relative;
    
    color: color(primary);
    font: 600 1.5rem / 1 font-family(fraktion);
    letter-spacing: 0.05em;
    text-decoration: none;

    transition: opacity 0.3s ease;

    &:hover {
      opacity: 0.7;
    }
  }

  .navigation__logo-icon {
    display: inline-block;
  }

  .navigation__menu {
    display: none;
    gap: 3rem;
    margin: 0;
    padding: 0;
    list-style: none;

    @include mq(tablet) {
      display: flex;
    }
  }

  .navigation__item {
    position: relative;
  }

  .navigation__link {
    position: relative;
    display: flex;
    align-items: center;
    gap: 0.5rem;

    color: color(primary);
    font: 400 0.875rem / 1 font-family(fraktion);
    letter-spacing: 0.08em;
    text-decoration: none;

    transition: opacity 0.3s ease;

    &::after {
      content: '';
      position: absolute;
      bottom: -0.5rem;
      left: 0;
      right: 0;

      height: 1px;
      background: color(primary);

      transform: scaleX(0);
      transform-origin: right;
      transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    &:hover {
      opacity: 1;

      &::after {
        transform: scaleX(1);
        transform-origin: left;
      }
    }
  }

  .navigation__arrow {
    font-size: 0.6em;
    opacity: 0.6;
    transition: transform 0.3s ease;
  }

  .navigation__link:hover .navigation__arrow {
    transform: translateY(2px);
  }
</style>
